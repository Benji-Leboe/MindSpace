            <textarea name="text" placeholder="Thoughts?"></textarea>
            <input class="post-comment" type="submit" value="Comment">
          </section>
          <section class="comment-box">
          </section>
        </form>
      </section>
  </main>
  <footer>
    <% include ./partials/_footer %>
  </footer>
